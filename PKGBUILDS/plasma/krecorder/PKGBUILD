# Maintainer: Danct12 <danct12@disroot.org>
# Contributor: Bernhard Landauer <bernhard@manjaro.org>

pkgname=krecorder
pkgver=21.08
pkgrel=1
pkgdesc="Cross-platfrom calculator built with the Kirigami framework"
arch=('x86_64' 'aarch64')
url="https://invent.kde.org/plasma-mobile/kalk"
license=('GPL3')
depends=('ki18n' 'kconfig' 'kirigami2' 'qt5-multimedia' 'qt5-svg')
makedepends=('qt5-tools' 'extra-cmake-modules')
source=("https://download.kde.org/stable/plasma-mobile/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('d1088c33f3a6e4306eaf1a14736eee71edf239c4b11c348d53fa0c9810ea018d')

prepare() {
  mkdir build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
